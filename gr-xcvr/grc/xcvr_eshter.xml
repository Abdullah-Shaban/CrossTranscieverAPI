<?xml version="1.0"?>
<block>
  <name>SNE-ESHTER</name>
  <key>xcvr_eshter</key>
  <category>xcvr</category>
  <import>import xcvr</import>
  <make>xcvr.eshter($device_path, $frequency, $preset_id, $samples)</make>
  <callback>set_frequency($frequency)</callback>
  <param>
    <name>Device path</name>
    <key>device_path</key>
    <value>/dev/ttyUSB0</value>
    <type>string</type>
  </param>
  <param>
    <name>Frequency (Hz)</name>
    <key>frequency</key>
    <type>float</type>
  </param>
  <param>
  <name>Preset ID</name>
    <key>preset_id</key>
    <value>2</value>
    <type>int</type>
  </param>
  <param>
    <name>Num. samples</name>
    <key>samples</key>
    <value>1024</value>
    <type>int</type>
  </param>
  <source>
    <name>out</name>
    <type>float</type>
    <vlen>$samples</vlen>
  </source>
</block>
